<p style="color: green"><%= notice %></p>

<h1>Authors</h1>

<%= form_with url: authors_path, method: :get do |f| %>
  <%= f.search_field :q, value: params[:q] %>
  <%= f.submit "Search" %>
<% end %>

<div id="authors">
  <% @authors.each do |author| %>
    <%= render author %>
    <p>
      <%= link_to "Show this author", author %>
    </p>
  <% end %>
</div>

<%= link_to "New author", new_author_path %>
