<div id="<%= dom_id book %>">
  <p>
    <strong>Description:</strong>
    <%= book.description %>
  </p>

  <p>
    <strong>Language:</strong>
    <%= book.language %>
  </p>

  <p>
    <strong>Title:</strong>
    <%= book.title %>
  </p>

  <p>
    <strong>Rating count:</strong>
    <%= book.rating_count %>
  </p>

  <p>
    <strong>Rating:</strong>
    <%= book.rating %>
  </p>

  <p>
    <strong>Publication date:</strong>
    <%= book.publication_date %>
  </p>

  <p>
    <strong>Ages:</strong>
    <%= book.ages %>
  </p>

  <p>
    <strong>Format:</strong>
    <%= book.format&.name %>
  </p>

</div>
