<div class="w-full flex flex-col items-center">
  <div>
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <div class="flex justify-between items-center">
      <h1 class="font-bold text-4xl">Books</h1>
    </div>
  </div>

  <div class="flex flex-col items-center mb-[10px] w-full max-w-[1200px]">
    <%= form_with url: books_path, method: :get, html: { class: "max-w-[600px] w-full" } do |f| %>
      <%= f.search_field :q, value: params[:q], class: "w-full my-[5px]", placeholder: "Search...", autofocus: true %>
    <% end %>

    <div class="flex flex-wrap flex-row justify-center gap-[10px]" id="books">
      <%= render "page", books: @books, page: @page&.number %>
    </div>
  </div>
</div>
